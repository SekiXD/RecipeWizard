<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="170dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="6dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:src="@drawable/recipe"
                    android:id="@+id/recipe_intro_image"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/recipe_intro_name"
                        android:layout_centerHorizontal="true"
                        android:textColor="#ffffff"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:gravity="center_vertical"
                        android:background="#aa7e7e7e"
                        android:text="Quinoa-Crusted Chicken Parmesan" />
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/pan"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="16dp"
            android:id="@+id/recipe_intro_fab"
            app:fabSize="normal"
            android:baselineAlignBottom="true"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:text=" Ingredients: "
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ingredients_icon"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recipe_intro_ingredients"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:textSize="14sp"
                    android:lineSpacingExtra="10dp"/>

                <TextView
                    android:text=" Equipments: "
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/cooking_tools"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:text="step_equiments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recipe_intro_equiments"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="14sp"
                    android:lineSpacingExtra="10dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/info_back"
                            android:id="@+id/calorie_bg"/>
                        <TextView
                            android:textSize="8dp"
                            android:text="CALORIE"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true" />
                        <TextView
                            android:textSize="13dp"
                            android:text="500"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/calories"
                            android:layout_marginTop="16dp"
                            android:layout_centerHorizontal="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/info_back"
                            android:id="@+id/protein_bg" />
                        <TextView
                            android:textSize="8dp"
                            android:text="PROTEIN"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true" />
                        <TextView
                            android:textSize="13dp"
                            android:text="28"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/protein"
                            android:layout_marginTop="16dp"
                            android:layout_centerHorizontal="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/info_back"
                            android:id="@+id/carbs_bg" />
                        <TextView
                            android:textSize="9dp"
                            android:text="CARBS"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:layout_marginTop="7dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true" />
                        <TextView
                            android:textSize="13dp"
                            android:text="6.48"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/carbs"
                            android:layout_marginTop="16dp"
                            android:layout_centerHorizontal="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/info_back"
                            android:id="@+id/fat_bg" />
                        <TextView
                            android:text="FAT"
                            android:textSize="9dp"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:layout_marginTop="7dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true" />
                        <TextView
                            android:textSize="13dp"
                            android:text="54.02"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/fat"
                            android:layout_marginTop="16dp"
                            android:layout_centerHorizontal="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/nutri_back"
                            android:id="@+id/vege_bg" />
                        <TextView
                            android:textSize="9dp"
                            android:text="VEGET-\n ARIAN"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/nutri_back"
                            android:id="@+id/vegan_bg" />

                        <TextView
                            android:text="VEGAN"
                            android:textSize="9dp"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/nutri_back"
                            android:id="@+id/gluten_bg" />
                        <TextView
                            android:textSize="9dp"
                            android:text="GLUTEN\n   FREE"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/nutri_back"
                            android:id="@+id/dairy_bg" />

                        <TextView
                            android:text="DAIRY\n FREE"
                            android:textSize="9dp"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true" />
                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorAccent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:text="If you have approximately 15 minutes to spend in the kitchen, Slow-Cooker Banh Mi Rice Bowls might be a great gluten free and dairy free recipe to try. One serving contains 404 calories, 29g of protein, and 5g of fat. This recipe serves 4. For $1.62 per serving, this recipe covers 32% of your daily requirements of vitamins and minerals. Several people really liked this Vietnamese dish. Head to the store and pick up reduced sodium soy sauce, kosher salt, jalapeno, and a few other things to make it today. To use up the cooked brown rice you could follow this main course with the Blueberry Crisp as a dessert. 6339 people have tried and liked this recipe. It is brought to you by Skinny Taste. It works well as a budget friendly main course. All things considered, we decided this recipe deserves a spoonacular score of 84%. This score is tremendous. If you like this recipe, take a look at these similar recipes: Slow Cooker Banh Mi Rice Bowls, Slow Cooker Salsa Chicken Rice Bowls, and Slow Cooker Hawaiian Chicken Rice Bowls."
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    android:id="@+id/recipe_summary"
                    android:layout_marginLeft="@dimen/summary_margin"
                    android:layout_marginRight="@dimen/summary_margin"/>/>
            </LinearLayout>
        </ScrollView>

    </FrameLayout>

</LinearLayout>
