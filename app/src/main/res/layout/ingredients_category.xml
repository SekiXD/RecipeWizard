<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ingredientsCategoryRelativeLayout"
    android:gravity="center"
    android:paddingTop="15dp"
    android:background="#cfd8dc">


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:id="@+id/ingredientsCategoryIcon"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ingredientsCategoryName"
        android:paddingTop="10dp"
        android:layout_below="@+id/ingredientsCategoryIcon"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:foregroundGravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ingredientsCategoryCount"
        android:layout_below="@+id/ingredientsCategoryName"
        android:textAlignment="center"/>

</RelativeLayout>