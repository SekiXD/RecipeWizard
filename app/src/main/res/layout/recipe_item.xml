<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:layout_width="match_parent"

        android:id="@+id/recipe_item_image"
        android:scaleType="centerCrop"
        android:layout_height="140dp"/>
    <!--android:foreground="#99afafaf"-->
    <!--android:src="@drawable/recipe"-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:id="@+id/l"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/recipe_item_star"
            android:layout_margin="-1dp"
            android:background="#00000000" />

        <!--android:src="@drawable/star_off"-->

        <TextView
            android:id="@+id/recipe_item_name"
            android:text="Quinoa-Crusted Chicken Parmesan"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:textColor="#ffffff"
            android:background="#aa7e7e7e"
            android:layout_height="wrap_content"
            android:textSize="18dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="20 min"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recipe_item_time"
                android:drawablePadding="6dp"
                android:textColor="#ffffff"
                android:paddingLeft="6dp"
                android:paddingRight="5dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:background="#aa7e7e7e" />
            <!--android:drawableLeft="@drawable/timer"-->

            <TextView
                android:text="2 servings"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/recipe_item_servings"

                android:drawablePadding="6dp"
                android:textColor="#ffffff"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:background="#aa7e7e7e" />
            <!--android:drawableLeft="@drawable/servings"-->

        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_below="@+id/recipe_item_image"
        android:layout_alignParentStart="true" />

</RelativeLayout>
